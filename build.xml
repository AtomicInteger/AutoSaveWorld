<project name="AutoSaveWorld" default="build" basedir=".">

    <path id="libs">
        <fileset dir="libs" includes="**/*.jar"/>
    </path>
	
	<target name="build">
        <mkdir dir="build/classes"/>
        <javac source="1.6" target="1.6" srcdir="src" destdir="build/classes" classpathref="libs"/>
        <jar destfile="AutoSaveWorld.jar" basedir="build/classes">
            <fileset file="src/plugin.yml" />
        </jar>
    </target>
	
</project>